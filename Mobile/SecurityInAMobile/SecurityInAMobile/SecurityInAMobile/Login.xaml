<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecurityInAMobile.Login"
             BackgroundColor="#EEEEEE">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <StackLayout Padding="60" Grid.Row="0" VerticalOptions="Center">
                <Image Source="humanIcon.png"/>
            </StackLayout>

            <StackLayout Padding="15" Grid.Row="1" VerticalOptions="End">
                <Label Text="Box code" FontSize="Large" HorizontalOptions="Center" />
                <Entry Placeholder="Input box code" x:Name="BoxCodeEntry" Keyboard="Numeric"/>
                <Button BackgroundColor="#0F5896" TextColor="White" Text="Login" FontSize="Medium" x:Name="LoginButton" Clicked="LoginButtonClick"/>
                <Button BackgroundColor="#0F5896" TextColor="White" Text="QR Login" FontSize="Medium"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>