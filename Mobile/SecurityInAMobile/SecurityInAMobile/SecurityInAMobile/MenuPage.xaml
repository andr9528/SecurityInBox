<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecurityInAMobile.MenuPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="400"/>
            </Grid.RowDefinitions>
            <Label Text="Menu" Grid.Column="0" Grid.Row="0" VerticalTextAlignment="Center"
                    HorizontalOptions="Center" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
            <ListView x:Name="MenuList" Grid.Column="0" Grid.Row="1"  
                      HorizontalOptions="Center" VerticalOptions="Center" ItemSelected="MenuList_ItemSelected"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>