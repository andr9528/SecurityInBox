            <Button x:Name="Home" Text="Home" Grid.Column="0" Grid.Row="1"
                    HorizontalOptions="Center" VerticalOptions="Center" Clicked="Home_Clicked"/>
            <Button x:Name="Settings" Text="Settings" Grid.Column="0" Grid.Row="2"
                    HorizontalOptions="Center" VerticalOptions="Center" Clicked="Settings_Clicked"/>
            <Button x:Name="Help" Text="Help" Grid.Column="0" Grid.Row="3"
                    HorizontalOptions="Center" VerticalOptions="Center" Clicked="Help_Clicked"/>
            -->
